<resources>

    <style name="LightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">?android:attr/windowBackground</item>

        <item name="android:textColorPrimary">@color/highEmphasisText</item>
        <item name="android:textColorSecondary">@color/mediumEmphasisText</item>

        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>

        <item name="colorStroke">@color/stroke</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme.Rounded</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryVariantDark</item>
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="colorSurface">@color/surfaceDark</item>

        <item name="android:textColorPrimary">@color/highEmphasisTextDark</item>
        <item name="android:textColorSecondary">@color/mediumEmphasisTextDark</item>

        <item name="colorOnPrimary">@color/onPrimaryDark</item>
        <item name="colorOnSecondary">@color/onSecondaryDark</item>
        <item name="colorOnBackground">@color/onBackgroundDark</item>
        <item name="colorOnSurface">@color/onSurfaceDark</item>

        <item name="colorStroke">@color/strokeDark</item>

        <item name="android:colorControlHighlight">@color/colorControlHighLightDark</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme.Rounded.Dark</item>
    </style>

    <style name="LightTheme.LightWindow" />

    <style name="DarkTheme.DarkWindow" />

    <style name="BottomSheetStyle.Rounded" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/LargeShapeAppearance</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="BottomSheetDialogTheme.Rounded">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle.Rounded</item>
    </style>

    <style name="BottomSheetDialogTheme.Rounded.Dark">
        <item name="android:colorBackground">@color/backgroundDark</item>
    </style>

    <style name="LargeShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>
