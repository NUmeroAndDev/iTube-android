<resources>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>

        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnError">@color/onError</item>

        <item name="colorStroke">@color/stroke</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme.Rounded</item>
    </style>

    <style name="AppTheme.LightWindow" />

    <style name="BottomSheetStyle.Rounded" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/LargeShapeAppearance</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="BottomSheetDialogTheme.Rounded">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle.Rounded</item>
    </style>

    <style name="BottomSheetDialogTheme.Rounded.Dark">
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="LargeShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>
</resources>
