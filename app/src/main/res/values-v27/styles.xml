<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.EdgeToEdge">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="BottomSheetDialogTheme.Rounded">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle.Rounded</item>
    </style>

    <style name="BottomSheetDialogTheme.Rounded.Dark">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/surface</item>
    </style>
</resources>